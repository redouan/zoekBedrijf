<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <table class="login">
    <tr>
      <td>
        <h2>Login: </h2>
      </td></tr>

    <tr>

      <td><%= f.label :username %></td>
      <td><%= f.text_field :username %></td>
    </tr>
    <tr>
      <td><%= f.label :password %><br /></td>
      <td><%= f.password_field :password %></td>
      <td><%= f.submit "Login" %></td>
    </tr>
    <tr>
      <td></td>
      <td class="red">Of maak <%= link_to "Hier", new_account_path %> een nieuwe Account</td>
    </tr>
  </table>

<% end %>

